@model List<MvcHomework.Models.ViewModel.RandomListsViewModel>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.Id</td>
                    <td>@data.Type</td>
                    <td>@data.DateTime.ToString("yyyy-M-d")</td>
                    <td>@data.Money</td>
                </tr>
            }
        </table>
    </div>
</div>